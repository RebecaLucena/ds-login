<Window x:Class="Ex01_Login.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex01_Login"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF64C19F"/>
                <GradientStop Color="#FFCB4AB9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Bt_adicao" Content="ADIÇÃO" HorizontalAlignment="Left" Margin="158,80,0,0" VerticalAlignment="Top" Height="68" Width="205" RenderTransformOrigin="0.547,0.808" Background="#FF78F1F7" BorderBrush="{x:Null}" Foreground="#FFDC16E6" FontSize="24" FontWeight="Bold" Click="Button_Click"/>
        <Button x:Name="Bt_Subtracao" Content="SUBTRAÇÃO" HorizontalAlignment="Left" Margin="437,80,0,0" VerticalAlignment="Top" Height="68" Width="205" RenderTransformOrigin="0.547,0.808" BorderBrush="{x:Null}" Background="#FF78F1F7" Foreground="#FFDC16E6" FontSize="24" FontWeight="Bold" Click="Button_Click_1"/>
        <Button x:Name="Bt_multiplicacao1" Content="MULTIPLICAÇÃO" HorizontalAlignment="Left" Margin="158,227,0,0" VerticalAlignment="Top" Height="68" Width="205" BorderBrush="{x:Null}" Background="#FF78F1F7" Click="Bt_multiplicacao1_Click" Foreground="#FFDC16E6" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="Bt_divisao" Content="DIVISÃO" HorizontalAlignment="Left" Margin="437,227,0,0" VerticalAlignment="Top" Height="68" Width="205" Background="#FF78F1F7" BorderBrush="{x:Null}" Foreground="#FFDC16E6" FontSize="24" FontWeight="Bold" Click="Bt_divisao_Click"/>
        <Button x:Name="Bt_Tela3" Content="Dados Pessoais" HorizontalAlignment="Center" Margin="0,348,0,36" Width="205" Background="#FF78F1F7" FontSize="24" BorderBrush="{x:Null}" Foreground="#FFDC16E6" FontWeight="Bold" Click="Bt_Tela3_Click"/>
    </Grid>
</Window>
