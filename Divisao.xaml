<Window x:Class="Ex01_Login.Divisao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex01_Login"
        mc:Ignorable="d"
        Title="Divisao" Height="450" Width="800"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF54E5EC"/>
                <GradientStop Color="#FFFB55EC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="DIVISÃO" HorizontalAlignment="Left" Margin="300,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="91" Width="195" Foreground="White" FontWeight="Bold" FontSize="72" FontFamily="Bahnschrift Light Condensed">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.627"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="NÚMERO 1" HorizontalAlignment="Left" Margin="142,137,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.395,-1.297" Height="42" Width="140" FontSize="22" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD6D6D6"/>
        <Label Content="NÚMERO 2" HorizontalAlignment="Left" Margin="515,150,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.395,-1.297" Height="42" Width="140" FontSize="22" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD6D6D6"/>
        <Label Content="RESULTADO" HorizontalAlignment="Center" Margin="0,309,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.395,-1.297" Height="42" Width="140" FontSize="22" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD6D6D6"/>
        <TextBox x:Name="txt_n1" HorizontalAlignment="Left" Margin="142,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="33" RenderTransformOrigin="0.38,0.394"/>
        <TextBox x:Name="txt_n2" HorizontalAlignment="Left" Margin="500,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="33"/>
        <TextBox x:Name="txt_resul" HorizontalAlignment="Center" Margin="0,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="33"/>
        <Button x:Name="Bt_Dividir" Content="DIVIDIR" HorizontalAlignment="Left" Margin="347,240,0,0" VerticalAlignment="Top" Height="57" Width="103" Foreground="#FFFFFCFC" FontSize="20" FontWeight="Bold" Background="#FF50EEEE" BorderBrush="{x:Null}" Click="Bt_Dividir_Click"/>

    </Grid>
</Window>
