<Window x:Class="Ex01_Login.Adicao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex01_Login"
        mc:Ignorable="d"
        Title="Adicao" Height="450" Width="800"
        WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF53C5BB"/>
            <GradientStop Color="#FFE466E4" Offset="0.857"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="ADIÇÃO" HorizontalAlignment="Left" Margin="307,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="91" Width="182" Foreground="White" FontWeight="Bold" FontSize="72" FontFamily="Bahnschrift Light Condensed">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.627"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="NÚMERO 1" HorizontalAlignment="Left" Margin="119,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.395,-1.297" Height="42" Width="139" FontSize="22" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD6D6D6"/>
        <Label Content="NÚMERO 2" HorizontalAlignment="Left" Margin="547,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.395,-1.297" Height="42" Width="139" FontSize="22" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD6D6D6"/>
        <Label Content="RESULTADO" HorizontalAlignment="Center" Margin="0,306,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.395,-1.297" Height="42" Width="139" FontSize="22" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD6D6D6"/>
        <TextBox x:Name="txt_n1" HorizontalAlignment="Left" Margin="100,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" Height="60"/>
        <TextBox x:Name="txt_n2" HorizontalAlignment="Left" Margin="528,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" Height="60"/>
        <TextBox x:Name="txt_resul" HorizontalAlignment="Center" Margin="0,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Height="40"/>
        <Button x:Name="Bt_somar" Content="SOMAR" HorizontalAlignment="Center" Margin="0,195,0,0" VerticalAlignment="Top" Height="75" Width="119" RenderTransformOrigin="0.489,1.389" Background="#FF87E2D1" FontSize="20" FontWeight="Bold" Foreground="#FFF3EDED" Click="Bt_somar_Click"/>

    </Grid>
</Window>
